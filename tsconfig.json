{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "target": "ES6",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
